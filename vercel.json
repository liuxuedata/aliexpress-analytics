{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "env": {
    "AE_TABLE_NAME": "ae_self_operated_daily"
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "^(?!/api/)(.*)$", "dest": "/public/$1" }
  ]
}

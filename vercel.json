{
  "version": 2,
  "functions": {
    "api/health.js": {
      "maxDuration": 10
    },
    "api/test.js": {
      "maxDuration": 10
    },
    "api/site-configs/index.js": {
      "maxDuration": 30
    },
    "api/site-configs/[id].js": {
      "maxDuration": 30
    },
    "api/data-source-templates/index.js": {
      "maxDuration": 30
    },
    "api/dynamic-ingest/[siteId].js": {
      "maxDuration": 60
    },
    "api/dynamic-ingest/[siteId]/generate-test-data.js": {
      "maxDuration": 60
    }
  },
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "^/api/(.*)$",
      "dest": "/api/$1"
    },
    {
      "src": "^/$",
      "dest": "/public/index.html"
    },
    {
      "src": "^(?!/api/)(.*)$",
      "dest": "/public/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/ozon/sync?days=1",
      "schedule": "0 19 * * *"
    },
    {
      "path": "/api/amazon/cron-daily",
      "schedule": "0 0 * * *"
    }
  ]
}
